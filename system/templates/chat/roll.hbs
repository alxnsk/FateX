<div class="fatex-rollWrapper">
    <header class="fatex-headline fatex-headline--chat">
        <h3 class="fatex-headline__text">{{ name }}</h3>

        <span class="fatex-headline__icon{{#if (eq rankStatus "negative")}} fatex-headline__icon--negative{{/if}}">
                {{#if (eq rankStatus "positive")}}+{{/if}}{{ rank }}
            </span>
    </header>

    <div class="fatex-roll" data-token-id="{{token.id}}">
        <div class="fatex-dice {{#if is2d6Roll}}fatex-dice--2d6-roll{{/if}}">
            {{#each symbols as |symbol symbolIndex|}}
                <div {{#if (lt symbolIndex ../options.magicCount)}}class="fatex-dice__magic_die"{{/if}}>{{symbol}}</div>
                {{#if (and (eq symbolIndex 0) ../is2d6Roll)}}<label>-</label>{{/if}}
            {{/each}}
        </div>

        <div class="fatex-result">
            <span class="fatex-roll__total">{{ totalString }}</span>
            <span class="fatex-roll__ladder">{{ ladder }}</span>
            {{#if history}}
                <div class="fatex-roll__history">
                    {{#each history as |historyEntry|}}
                        <div class="fatex-roll__history__entry">
                            {{historyEntry.user}} {{historyEntry.message}}
                        </div>
                    {{/each}}
                </div>
            {{/if}}
        </div>

        <div class="fatex-roll-actions">
            <button data-action="reroll"><i class="fas fa-arrows-rotate"></i></button>
            <button data-action="increase">+2</button>
            <button data-action="undo"><i class="fas fa-undo"></i></button>
        </div>
    </div>
</div>
